{
  "arrowParens": "always",
  "bracketSpacing": true,
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "es5",
  "useTabs": false,
  "overrides": [
      {
          "files": "*.js",
          "options": {
              "parser": "flow"
          }
      },
      {
          "files": "*.md",
          "options": {
              "printWidth": 90,
              "trailingComma": "none",
              "proseWrap": "always"
          }
      },
      {
          "files": "*.json",
          "options": {
              "tabWidth": 2,
              "printWidth": 90,
              "proseWrap": "never"
          }
      }
  ]
}